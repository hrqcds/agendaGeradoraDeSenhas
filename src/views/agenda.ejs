<%- include("includes/head")%> 
<%- include("includes/nav") %> 

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Crie ou edite o seu contato abaixo</p>            

            <%- include("includes/messages")%> 

            <% if(agenda._id) { %> 
            <form action="/agenda/edit/<%= agenda._id%> " method="POST">
            <% } else{ %> 
            <form action="/agenda/register" method="POST">
            <% } %> 
                <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                
                <div class="mb-3">
                  <label class="form-label">Descrição</label>
                  <input value="<%= agenda.description%>"  type="text" class="form-control" name="description">                          
                </div>

                <div class="mb-3">
                  <label class="form-label">Senha</label>
                  <input value="<%= agenda.password%>" type="text" id="senhaHTML" class="form-control" name="password">                          
                </div>                
                <%- include("includes/modal") %> 
                <button type="submit" class="btn btn-primary">Salvar</button>
                
              </form>          


        </div>

        <div class="col-lg-2"></div>

    </div>
</div>


<%- include("includes/footer") %> 